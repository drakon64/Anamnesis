@page "/{ns}/modules"
@namespace Anamnesis.Dashboard.Pages
@model ModulesModel
<!DOCTYPE html>
<head>
    <title>Modules - @Model.Namespace - Anamnesis</title>
</head>
<p><a href="/">Home</a></p>
<h1>@Model.Namespace - Modules</h1>
<table style="width: 100%">
    <thead>
    <tr>
        <th style="text-align: start">Name</th>
        <th style="text-align: start">System</th>
        <th style="text-align: start">Version</th>
        <th style="text-align: start">Summary</th>
        <th style="text-align: start">More</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var module in Model.Modules)
    {
        <tr>
            <td>@module.Name</td>
            <td>@module.System</td>
            <td>@module.Version</td>
            <td>@module.Summary</td>
            <td><a href="/@module.Namespace/modules/@module.Name/@module.System/@module.Version">Details</a> <a href="@module.Source">Source</a></td>
        </tr>
    }
    </tbody>
</table>
